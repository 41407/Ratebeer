<p id="notice"><%= notice %></p>

<h1>
  <%= @style.name %>
</h1>

<p>
  <strong>Description:</strong>
  <%= @style.description %>
</p>

<% if @beers.any? %>
    <h2> List of beers under this category:</h2>
    <ul>
      <% @beers.each do |beer| %>
          <li><%= link_to beer.name, beer %>
          by
          <%= link_to beer.brewery.name, beer.brewery %></li>
      <% end %>
    </ul>
<% else %>
    <p>There are no beers classified as <%= @style.name %></p>
<% end %>
<br>
<%= link_to 'Edit', edit_style_path %> |
<%= link_to 'Back', styles_path %>
