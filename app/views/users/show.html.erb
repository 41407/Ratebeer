<p id="notice"><%= notice %></p>

<h1>
  <%= @user.username %>
</h1>

<p> This user is a member of following beer clubs: </p>

<ul>
  <% @user.beer_clubs.each do |club| %>
      <li>
        <%= link_to club.name, club %>
      </li>
  <% end %>
</ul>

<p>
  <% if @user.ratings.empty? %>
      This user hasn't rated any beers.
  <% else %>
    <p>Favorite style: <%= link_to @user.favorite_style.name, @user.favorite_style %>   </p>
    <p>Favorite brewery: <%= link_to @user.favorite_brewery.name, @user.favorite_brewery %>   </p>
      This user has made <%= pluralize(@user.ratings.count, 'rating') %>, average <%= @user.average_rating %>


    <ul>
      <% @user.ratings.each do |rating| %>
          <li>
            <%= link_to rating.beer, rating.beer %> <%=rating.score %>
            <% if @user == current_user %>
                <%= link_to 'delete', rating, method: :delete, data: {confirm: 'Are you sure?'} %>
            <% end %>
          </li>
      <% end %>
    </ul>
<% end %>
</p>

<% if current_user == @user %>
    <%= link_to 'Destroy user', @user, method: :delete, data: {confirm: 'Are you sure?'} %> |
    <%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>

<%= link_to 'Back', users_path %>
