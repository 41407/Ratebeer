<h1>Listing breweries</h1>
<p id="notice"><%= notice %></p>
<p> Number of breweries: <%= @breweries.count %> </p>
<table class="table table-hover">
  <thead>
  <tr>
    <th> <%= link_to 'Name', breweries_path(order: "name") %> </th>
    <th> <%= link_to 'Year', breweries_path(order: "style") %> </th>
  </tr>
  </thead>

  <tbody>
  <% @breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'List of beers', beers_path %>
</p>
<br>

<%= link_to 'New Brewery, class: "btn btn-primary"', new_brewery_path if current_user %>
